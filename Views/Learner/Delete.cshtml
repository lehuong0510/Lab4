@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model Learner
<h1>Delete</h1>

<div>
    <h3>Bạn chắc chắn muốn xoá?</h3>
    <div>
        <h4>LearnerID: @Model.LearnerID</h4>
        <h4>Name: @Model.FirstMidName @Model.LastName</h4>
        <!-- Các thông tin khác -->
    </div>
    <form asp-controller="Learner" asp-action="Delete" asp-route-id="@Model.LearnerID" method="post" class="mt-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
